<resources>
    <!-- Base application theme. -->
    <style name="Theme.TodoList" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Splash Screen -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.TodoList</item>
    </style>

    <!-- Text -->
    <style name="Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?colorOnSecondary</item>
    </style>

    <style name="Text.Normal">
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="Text.Medium">
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="Text.Bold">
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="Text.Bold.24">
        <item name="android:textSize">24sp</item>
    </style>

    <!-- EditText -->
    <style name="EditText">
        <item name="fontFamily">@font/poppins</item>
    </style>

    <!-- Button -->
    <style name="Button">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:padding">14dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">8dp</item>
    </style>
</resources>